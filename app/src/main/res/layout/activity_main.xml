<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.justjava.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            style="@style/logoImageView"
            android:src="@drawable/justjava"
            android:contentDescription="Logo"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                style="@style/row">
                <TextView
                    android:id="@+id/drinkCoffee"
                    style="@style/rowDrink"
                    android:text="@string/drinkCoffee"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/coffee_decrease"
                        style="@style/buttonQty"
                        android:text="-"
                        android:onClick="decrement" />

                    <TextView
                        android:id="@+id/quantity_coffee"
                        style="@style/quantity"
                        android:text="0"
                        android:layout_toRightOf="@id/coffee_decrease"/>

                    <Button
                        android:id="@+id/coffee_increase"
                        style="@style/buttonQty"
                        android:text="+"
                        android:onClick="increment"
                        android:layout_toRightOf="@id/quantity_coffee"/>
                </RelativeLayout>
            </TableRow>

            <TableRow
                style="@style/row">
                <TextView
                    android:id="@+id/drinkLatte"
                    style="@style/rowDrink"
                    android:text="@string/drinkLatte"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/latte_decrease"
                        style="@style/buttonQty"
                        android:text="-"
                        android:onClick="decrement" />

                    <TextView
                        android:id="@+id/quantity_latte"
                        style="@style/quantity"
                        android:text="0"
                        android:layout_toRightOf="@id/latte_decrease"/>

                    <Button
                        android:id="@+id/latte_increase"
                        style="@style/buttonQty"
                        android:text="+"
                        android:onClick="increment"
                        android:layout_toRightOf="@id/quantity_latte"/>
                </RelativeLayout>
            </TableRow>

            <TableRow
                style="@style/row">
                <TextView
                    android:id="@+id/drinkCappuccino"
                    style="@style/rowDrink"
                    android:text="@string/drinkCappuccino"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/cappuccino_decrease"
                        style="@style/buttonQty"
                        android:text="-"
                        android:onClick="decrement" />

                    <TextView
                        android:id="@+id/quantity_cappuccino"
                        style="@style/quantity"
                        android:text="0"
                        android:layout_toRightOf="@id/cappuccino_decrease"/>

                    <Button
                        android:id="@+id/cappuccino_increase"
                        style="@style/buttonQty"
                        android:text="+"
                        android:onClick="increment"
                        android:layout_toRightOf="@id/quantity_cappuccino"/>
                </RelativeLayout>
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/submit_order"
            android:text="@string/button_order"
            style="@style/buttonControl"
            android:onClick="submitOrder" />

        <TextView
            android:id="@+id/boxAlert"
            style="@style/alert"
            android:text="@string/msgAlert"/>

        <TextView
            android:id="@+id/labelInvoice"
            style="@style/label"
            android:text="@string/label_price"/>

        <TableLayout
            android:id="@+id/invoiceTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                style="@style/row">
                <TextView
                    android:id="@+id/selected_drinks"
                    style="@style/output"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/selected_drinks_price"
                    style="@style/output"
                    android:layout_weight="1"/>

            </TableRow>
            <TableRow
                style="@style/row">
                <TextView
                    android:id="@+id/totallabel"
                    style="@style/output"
                    android:layout_weight="3"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/total_price"
                    style="@style/output"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/labelThanks"
            style="@style/label"
            android:text="@string/label_thanks"/>
    </LinearLayout>

</ScrollView>