<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LogoImageView">
        <item name="android:layout_width">@dimen/logo_width</item>
        <item name="android:layout_height">@dimen/logo_height</item>
        <item name="android:layout_marginBottom">@dimen/logo_bottom_margin</item>
        <item name="android:layout_marginTop">@dimen/logo_top_margin</item>
    </style>

    <style name="RowDrink">
        <item name="android:background">@color/drinkChoice</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:height">@dimen/button_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/button_margin</item>
    </style>

    <style name="ButtonQuantity">
        <item name="android:layout_width">@dimen/button_size</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextQuantity">
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonControl">
        <item name="android:layout_width">@dimen/dimen_250dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:background">@color/colorOrderButton</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="TextLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="PanelOutput">
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MsgAlert">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_size</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@color/colorAlert</item>
        <item name="android:textColor">@color/colorMsgAlert</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
